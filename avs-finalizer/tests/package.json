{
  "name": "avs-tests",
  "version": "1.0.0",
  "description": "e2e tests for avs",
  "main": "index.js",
  "type": "module",
  "repository": "git@github.com:mangata-finance/eigen-layer-monorepo.git",
  "author": "GonCer <gonza.cerro@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test-opt-out": " node --experimental-specifier-resolution=node --loader ts-node/esm --experimental-vm-modules node_modules/jest/bin/jest.js  ./avs.finalizer.optout.test.ts --detectOpenHandles --verbose  --forceExit",
    "test-corrupted": "node --experimental-specifier-resolution=node --loader ts-node/esm --experimental-vm-modules node_modules/jest/bin/jest.js ./avs.finalizer.corrupted.test.ts --detectOpenHandles --verbose  --forceExit",
    "test": "node --experimental-specifier-resolution=node --loader ts-node/esm --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --verbose  --forceExit --runInBand",
    "update-contracts": "cd ../../contracts && forge clean && forge build"
  },
  "devDependencies": {
    "@polkadot/api": "^11.1.1",
    "@polkadot/types": "^11.1.1",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2"
  },
  "dependencies": {
    "@ethereumjs/wallet": "^2.0.4",
    "@mattrglobal/bbs-signatures": "^1.3.1",
    "crypto": "^1.0.1",
    "ethereum-abi-types-generator": "^1.3.4",
    "ethereumjs-wallet": "1.0.2",
    "gasp-sdk": "0.0.2-eth-rollup-develop.45",
    "gasp-types": "0.0.2-eth-rollup-develop.45",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "testcontainers": "^10.7.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "viem": "^2.8.6",
    "web3-eth-accounts": "^4.1.1",
    "web3-types": "^1.8.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@polkadot|@babel/runtime/helpers/esm/)"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "verbose": true,
    "bail": false,
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testTimeout": 1500000
  }
}
