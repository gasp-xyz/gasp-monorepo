{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "allowJs": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  }
}
