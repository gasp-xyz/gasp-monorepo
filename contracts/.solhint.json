{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-call-value": "error",
    "avoid-low-level-calls": "error",
    "avoid-sha3": "error",
    "avoid-suicide": "error",
    "avoid-throw": "error",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "code-complexity": ["error", 8],
    "compiler-version": ["error", "0.8.13"],
    "comprehensive-interface": "off",
    "const-name-snakecase": "error",
    "constructor-syntax": "error",
    "contract-name-camelcase": "error",
    "event-name-camelcase": "error",
    "explicit-types": ["error", "explicit"],
    "foundry-test-functions": "off",
    "func-name-mixedcase": "off",
    "func-named-parameters": ["error", 8],
    "func-param-name-mixedcase": "error",
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "function-max-lines": ["error", 90],
    "gas-calldata-parameters": "error",
    "gas-custom-errors": "off",
    "gas-increment-by-one": "off",
    "gas-indexed-events": "off",
    "gas-length-in-loops": "error",
    "gas-multitoken1155": "off",
    "gas-named-return-values": "off",
    "gas-small-strings": "off",
    "gas-strict-inequalities": "off",
    "gas-struct-packing": "error",
    "immutable-vars-naming": ["error", { "immutablesAsConstants": false }],
    "imports-on-top": "error",
    "imports-order": "error",
    "interface-starts-with-i": "error",
    "mark-callable-contracts": "off",
    "max-line-length": ["error", 162],
    "max-states-count": ["error", 15],
    "modifier-name-mixedcase": "error",
    "multiple-sends": "error",
    "named-parameters-mapping": "off",
    "no-complex-fallback": "error",
    "no-console": "off",
    "no-empty-blocks": "off",
    "no-global-import": "error",
    "no-inline-assembly": "error",
    "no-unused-import": "warn",
    "no-unused-vars": "error",
    "not-rely-on-block-hash": "error",
    "not-rely-on-time": "off",
    "one-contract-per-file": "off",
    "ordering": "off",
    "payable-fallback": "error",
    "private-vars-leading-underscore": "error",
    "quotes": ["error", "double"],
    "reason-string": ["error", { "maxLength": 55 }],
    "reentrancy": "error",
    "state-visibility": "error",
    "use-forbidden-name": "error",
    "var-name-mixedcase": "off",
    "visibility-modifier-order": "error"
  }
}
