{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
